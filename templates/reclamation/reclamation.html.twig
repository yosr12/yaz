{% extends 'base.html.twig' %}

{% block body %}

    <div class="send-message">
      <div class="container">
        <div class="row">
        
        <div class="col-md-12">
            <div class="section-heading">
              <a href="/listRec">Lister réclamations <i class="fa fa-angle-right"></i></a>
            </div>
          </div>

          <div class="col-md-12">
            <div class="section-heading">
              <h2>Envoyer votre réclamation</h2>
            </div>
          </div>
          <div class="col-md-8">
            <div class="contact-form">
              <form id="contact" action="" method="post">

              {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
              
                <div class="row">
                 
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                     {{ form_errors(form.sujet) }}
                     {{ form_widget(form.sujet,{'attr': {'class': 'form-control' , 'placeholder' : 'Subject'}}) }}
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                    {{ form_errors(form.date) }}
                     {{ form_widget(form.date,{'attr': {'class': 'form-control' , 'placeholder' : 'Date'}}) }}
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                    {{ form_errors(form.description) }}
                     {{ form_widget(form.description,{'attr': {'class': 'form-control' , 'placeholder' : 'Your Message'}}) }}
                      </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                    {{ form_widget(form.Send,{'attr': {'class': 'filled-button ', 'placeholder' : 'Send'}}) }}
                    </fieldset>
                  </div>
                </div>
              </form>
              {{ form_end(form) }}
            </div>
          </div>
{% endblock %}
