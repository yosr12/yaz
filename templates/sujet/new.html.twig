{% extends 'base.html.twig' %}

{% block title %}New Sujet{% endblock %}
{% block css %} <link rel="stylesheet" href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css') }}"> {% endblock %}

{% block body %}
<div class="send-message">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Ajouter Sujet</h2>
                </div>
            </div>
            <div class="col-md-8">
                <div class="contact-form">

    {# include('sujet/_form.html.twig')  #}
                    {% set id = 1 %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <fieldset >
                {{ form_widget(form.sujet,{'attr': {'class': 'form-control' , 'placeholder' : 'sujet'}}) }}
            </fieldset>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <fieldset>
                {{ form_widget(form.description,{'attr': {'class': 'form-control' , 'placeholder' : 'description'}}) }}
            </fieldset>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <fieldset>
                <h6>Tags ?</h6>
                {{ form_widget(form.tag,{'attr': {'class': 'selectpicker' , 'placeholder' : 'tags'}}) }}
            </fieldset>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12" hidden>
            <fieldset>
                {{ form_widget(form.utilisateur,{'attr': {'placeholder' : 'tags','value' : id }}) }}
            </fieldset>
        </div>
        <br><br><br>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <fieldset>
                <h6>vous voulez ajouter une image ?</h6>
                {{ form_widget(form.image,{'attr': {'placeholder' : ''}}) }}
            </fieldset>
        </div>
        <br><br><br>
        <div class="col-lg-12">
            <fieldset>
                <button type="submit" id="form-submit" class="filled-button">{{ button_label|default('Ajouter') }}</button>
            </fieldset>
        </div>
    </div>

    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

    <a class="filled-button" style="color: #b3d7ff;" href="{{ path('sujet_index') }}">back to list</a>
{% endblock %}
{% block js %}
    <script src="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js') }}"></script>
    <script src="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/i18n/defaults-*.min.js') }}"></script>
{% endblock %}

